@using TestBlazor.Data

@code {
    [Parameter]
    public string HeaderTitle { get; set; }

    [Parameter]
    public string ColumnName { get; set; }

    [Parameter]
    public string Template { get; set; }

    [CascadingParameter]
    private GridView Parent { get; set; }

  
    protected override void OnInitialized()
    {
        if (Parent == null)
            throw new ArgumentNullException(nameof(Parent), "Grid Column must exist within a GridView");

        base.OnInitialized();

        Parent.AddColumn(this);
    }
}